<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:name=".RescueMeApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RescueMe"
        tools:targetApi="31">
        <activity
            android:name=".InitialSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ProfilePageActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ContactsActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DevPageActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LandingActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EmergencyActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NotificationsActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VideoPlayerActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity 
            android:name=".PersonalDataActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".InjuryChecklistActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AccidentChecklistActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".BleedingChecklistActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CantBreatheChecklistActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ChestPainChecklistActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UnconsciousChecklistActivity"
            android:exported="false"
            android:theme="@style/Theme.RescueMe"
            android:screenOrientation="portrait"/>
    </application>

</manifest>