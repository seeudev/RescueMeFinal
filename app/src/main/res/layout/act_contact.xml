<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/textViewContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Contacts"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/textViewAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:text="Add +"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        android:textColor="@color/red" />

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewContacts"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_search"
            app:tint="#757575" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="Search"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:textColor="#424242"
            android:textColorHint="#757575"
            android:textSize="22sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchBar"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_contact" />

    <RelativeLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A52A2A"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:layout_centerHorizontal="true"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_below="@+id/homeIcon"
                    android:textAppearance="@style/TextAppearance.RescueMe.Nav"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contactButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contactIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_contact"
                    android:layout_centerHorizontal="true"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_below="@+id/contactIcon"
                    android:textAppearance="@style/TextAppearance.RescueMe.Nav"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/emergencyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/emergencyIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_sos_bottom"
                    android:layout_centerHorizontal="true"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_below="@+id/emergencyIcon"
                    android:textAppearance="@style/TextAppearance.RescueMe.Nav"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notificationsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/notificationsIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    android:layout_centerHorizontal="true"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@+id/notificationsIcon"
                    android:textAppearance="@style/TextAppearance.RescueMe.Nav"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:layout_centerHorizontal="true"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_below="@+id/profileIcon"
                    android:textAppearance="@style/TextAppearance.RescueMe.Nav"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>