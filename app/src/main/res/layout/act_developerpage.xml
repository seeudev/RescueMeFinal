<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FEFEFE"
    android:padding="5dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Developer Page"
            android:textAppearance="@style/TextAppearance.RescueMe.Headline1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First Developer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/dev1ProfilePic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_pancito_dev1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Developer 1 Profile Picture" />

                <TextView
                    android:id="@+id/dev1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Christian Harry R. Pancito"
                    android:textAppearance="@style/TextAppearance.RescueMe.Headline1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/dev1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:textAppearance="@style/TextAppearance.RescueMe.Body1"
                    android:textSize="18sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/dev1Bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Based in the Philippines, this IT enthusiast finds joy in building everything from web-based applications to games. Outside of development, his leisure time is spent playing games or creating videos on the side."
                    android:textAppearance="@style/TextAppearance.RescueMe.Body1"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/dev1Website"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Website"
                        android:padding="5dp"
                        android:src="@drawable/ic_web"
                        android:layout_marginHorizontal="9dp"/>

                    <ImageView
                        android:id="@+id/dev1Github"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="GitHub"
                        android:padding="5dp"
                        android:src="@drawable/ic_github"
                        android:layout_marginHorizontal="9dp"/>
                    <ImageView
                        android:id="@+id/dev1Linkedin"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_linkedin"
                        android:padding="4dp"
                        android:contentDescription="Linkedin"
                        android:layout_marginHorizontal="9dp"/>
                    <ImageView
                        android:id="@+id/dev1Facebook"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_facebook"
                        android:padding="4dp"
                        android:contentDescription="Facebook"
                        android:layout_marginHorizontal="9dp"/>


                    <!-- Add more social links here as needed -->
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="16dp" />

            <!-- Second Developer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/dev2ProfilePic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_sultan_dev2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Developer 2 Profile Picture" />

                <TextView
                    android:id="@+id/dev2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April John A. Sultan"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.RescueMe.Headline1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/dev2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:textAppearance="@style/TextAppearance.RescueMe.Body1"
                    android:textSize="18sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/dev2Bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driven 2nd-year BS IT student aspiring to be a developer. Actively building programming skills and exploring technologies with a strong desire to create innovative solutions. Proactive and eager to learn the craft of software development."
                    android:textAppearance="@style/TextAppearance.RescueMe.Body1"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/dev2Github"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_github"
                        android:padding="4dp"
                        android:contentDescription="GitHub" />

                    <!-- Add more social links here as needed -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>